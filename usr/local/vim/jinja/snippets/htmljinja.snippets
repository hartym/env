snippet if
	{% if ${1:condition}: %}${2}{% endif %}

snippet else
	{% else: %}

snippet elif
	{% elif ${1:condition}: %}

snippet for
	{% for ${1:i} in ${2:iterable}: %}
	  ${3}
	{% endfor %}

snippet p
	{{ ${1:var} }}
	${2}

snippet block
	{% block '${1:name}' %}
	  ${2}
	{% endblock %}

snippet extends
	{% extends '${1:template}.html' %}
	${2}

